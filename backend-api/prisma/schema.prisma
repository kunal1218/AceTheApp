generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  ADMIN
  USER
}

enum SubscriptionStatus {
  ACTIVE
  CANCELED
  EXPIRED
}

model User {
  id                     String         @id @default(cuid())
  email                  String         @unique
  passwordHash           String
  role                   Role           @default(USER)
  hasActiveSubscription  Boolean        @default(false)
  hasSeenOracleCutscene  Boolean        @default(false)
  createdAt              DateTime       @default(now())
  updatedAt              DateTime       @updatedAt

  subscriptions          Subscription[]
  courses                Course[]
  calendarEvents         CalendarEvent[]
  lectureUserCaches      LectureUserCache[]
}

model Subscription {
  id         String               @id @default(cuid())
  userId     String
  user       User                 @relation(fields: [userId], references: [id], onDelete: Cascade)
  status     SubscriptionStatus   @default(ACTIVE)
  startedAt  DateTime             @default(now())
  expiresAt  DateTime?
  createdAt  DateTime             @default(now())
  updatedAt  DateTime             @updatedAt

  @@index([userId])
}

model Course {
  id        String         @id @default(cuid())
  userId    String
  user      User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  name      String
  category  String?
  createdAt DateTime       @default(now())
  updatedAt DateTime       @updatedAt

  syllabusItems SyllabusItem[]
  lectureTieInCaches LectureTieInCache[]
  lectureUserCaches  LectureUserCache[]

  @@index([userId])
}

model SyllabusItem {
  id          String    @id @default(cuid())
  courseId    String
  course      Course    @relation(fields: [courseId], references: [id], onDelete: Cascade)
  title       String
  description String?
  type        String?
  date        DateTime?
  rawText     String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([courseId])
  @@index([date])
}

model CalendarEvent {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  source      String
  sourceId    String
  title       String
  description String?
  courseId    String?
  courseName  String?
  dueAt       DateTime
  htmlUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@unique([userId, source, sourceId])
  @@index([userId, dueAt])
}

model LectureGeneralCache {
  id             String   @id @default(cuid())
  cacheKey       String   @unique
  topicName      String
  normalizedTopic String
  level          String
  styleVersion   String
  payload        Json
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model LectureTieInCache {
  id            String   @id @default(cuid())
  cacheKey      String   @unique
  courseId      String
  topicId       String
  notesVersion  String
  tieInVersion  String
  tieInChunks   Json
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([courseId])
}

model LectureUserCache {
  id               String   @id @default(cuid())
  userId           String
  courseId         String
  topicId          String
  level            String
  generalCacheKey  String
  tieInCacheKey    String
  payload          Json
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  course Course @relation(fields: [courseId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([courseId])
  @@unique([userId, courseId, topicId, level])
}
